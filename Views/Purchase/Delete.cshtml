@model Purchase

<h2>Delete Purchase</h2>

<div>
    <h4>Are you sure you want to delete this purchase?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentId)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <!-- Форма для подтверждения удаления записи -->
        <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Кнопка для удаления записи -->
    </form>

</div>

<a asp-action="Index" class="margin">Back to List</a> <!-- Ссылка для возврата к списку покупок без удаления -->
